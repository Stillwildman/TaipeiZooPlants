<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:progressBarStyle">@style/MyProgressBar</item>
    </style>

    <style name="MyProgressBar" parent="Base.Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/colorAccent</item>
        <item name="android:indeterminateTintMode">src_atop</item>
    </style>

</resources>
